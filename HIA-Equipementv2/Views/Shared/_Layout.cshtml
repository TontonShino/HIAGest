    @RenderBody()

    <div class="container body-content">

        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - HIA GEST - Développé par AceQuality</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    
</body>
</html>